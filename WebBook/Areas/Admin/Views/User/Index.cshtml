@model IEnumerable<WebBook.ViewModels.UserVM>

@{
    ViewData["Title"] = "DANH SÁCH NGƯỜI DÙNG";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">TRANG CHỦ</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">
                            <a asp-area="Admin" asp-controller="User" asp-action="Register" class="btn btn-sm btn-primary">Thêm tài khoản người dùng</a>
                            @*<a href="#" class="btn btn-sm btn-danger" id="btnDeleteAll">Delete All</a>*@
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <th style="width: 20px;"><input type="checkbox" id="SelectAll" /></th>
                                    <th>STT</th>
                                    <th>Họ và tên</th>
                                    <th>Tên đăng nhập</th>
                                    <th>Email</th>
                                    <th>Quyền</th>
                                    <th style="text-align:center">Tác vụ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    var stt = 1;
                                    foreach (var item in Model)
                                    {
                                        <tr id="trow_@item.Id">
                                            <td style="width: 20px"><input type="checkbox" value="@item.Id" /></td>
                                            <td>@stt</td>
                                            <td>@item.FullName</td>
                                            <td>@item.UserName</td>
                                            <td>@item.Email</td>
                                            <td>@item.Role</td>
                                            <td style="text-align:center">
                                                <a class="btn btn-sm btn-success" asp-area="Admin" asp-action="ResetPassword" asp-controller="User" asp-route-id="@item.Id">
                                                    <i class="fas fa-pencil-alt"></i>
                                                    Reset Password
                                                </a>                                              
                                            </td>
                                        </tr>
                                        stt++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4">Không có dữ liệu!</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                    <!--/.card-footer -->
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>

</section>

@section scripts{
    <script>
        $(document).ready(function () {

            $('body').on('click', '#btnDeleteAll', function (e) {
                e.preventDefault();
                var str = "";
                var checkbox = $(this).parents('.card').find('tr td input:checkbox');
                var i = 0;
                checkbox.each(function () {
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                        var _id = $(this).val();
                        if (i == 0) {
                            str += _id;
                        }
                        else {
                            str += "," + _id;
                        }
                        i++;
                    }
                    else {
                        checkbox.attr('selected', '');

                    }
                });
                if (str.length > 0) {
                    var conf = confirm("Bạn có chắc chắn muốn xóa tất cả?");
                    if (conf == true) {
                        $.ajax({
                            url: '/admin/supplier/deleteAll',
                            type: 'POST',
                            data: { ids: str },
                            success: function (rs) {
                                if (rs.success) {
                                    location.reload();
                                }
                            }
                        });
                    }
                }
            });


            $('body').on('change', '#SelectAll', function () {
                var checkStatus = this.checked;
                var checkbox = $(this).parents('.card-body').find('tr td input:checkbox');
                checkbox.each(function () {
                    this.checked = checkStatus;
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                    }
                    else {
                        checkbox.attr('selected', '');
                    }
                });
            });



            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data('id');
                var conf = confirm('Bạn chắc chắn muốn xóa?');
                if (conf == true) {
                    $.ajax({
                        url: '/admin/supplier/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    });
                }
            });
        });
    </script>
}