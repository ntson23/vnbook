@model IEnumerable<WebBook.ViewModels.ProductVM>
@using WebBook.Common
@if (Model != null && Model.Any())
{
    <div class="best_sellers">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <div class="section_title new_arrivals_title">
                        <h3>Sản phẩm bán chạy</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="product_slider_container">
                        <div class="owl-carousel owl-theme product_slider">
                            @foreach (var item in Model)
                            {
                                <div class="owl-item product_slider_item">
                                    <div class="product-item">
                                        <div class="product discount">
                                            <div class="product_image">
                                                <a asp-controller="Product" asp-action="Detail" asp-route-slug="@item.Slug" asp-route-id="@item.Id">
                                                <img src="~/uploads/images/product/@item.Avatar" alt="@item.Name" >
                                                </a>
                                            </div>
                                            <div class="favorite favorite_left"></div>
                                            <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>Sale</span></div>
                                            <div class="product_info">
                                                <h6 class="product_name"><a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id">@item.Name</a></h6>
                                                @if (item.Discount > 0)
                                                {
                                                    <div class="product_price">@ExtensionHelper.ToVnd(item.Price*(decimal)0.01*item.Discount))<span>@ExtensionHelper.ToVnd(item.Price)</span></div>
                                                }
                                                else
                                                {
                                                    <div class="product_price">@ExtensionHelper.ToVnd(item.Price)</div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>


                        <!-- Slider Navigation -->

                        <div class="product_slider_nav_left product_slider_nav d-flex align-items-center justify-content-center flex-column">
                            <i class="fa fa-chevron-left" aria-hidden="true"></i>
                        </div>
                        <div class="product_slider_nav_right product_slider_nav d-flex align-items-center justify-content-center flex-column">
                            <i class="fa fa-chevron-right" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}